    <persistence-unit name="SICPu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>sv.edu.ues.occ.web.ingenieria.sic135.instructoria.sistemacontable.entity.ArchivoCargado</class>
        <class>sv.edu.ues.occ.web.ingenieria.sic135.instructoria.sistemacontable.entity.Categoria</class>
        <class>sv.edu.ues.occ.web.ingenieria.sic135.instructoria.sistemacontable.entity.Configuracion</class>
        <class>sv.edu.ues.occ.web.ingenieria.sic135.instructoria.sistemacontable.entity.CuentaContable</class>
        <class>sv.edu.ues.occ.web.ingenieria.sic135.instructoria.sistemacontable.entity.Transaccion</class>
        <class>sv.edu.ues.occ.web.ingenieria.sic135.instructoria.sistemacontable.entity.TransaccionClasificacion</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/sistema_contable_sic135"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="postgresmy"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
            <property name="hibernate.hbm2ddl.auto" value="validate" />
        </properties>

    </persistence-unit>
</persistence>
